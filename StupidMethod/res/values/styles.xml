<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="titlebar_text_normal">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="titlebar_img_normal">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="titlebar_layout">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 动画,下进下出 -->
    <style name="anim_down_in_up_out">
        <item name="android:windowEnterAnimation">@anim/window_down_in</item>
        <item name="android:windowExitAnimation">@anim/window_down_out</item>
    </style>

